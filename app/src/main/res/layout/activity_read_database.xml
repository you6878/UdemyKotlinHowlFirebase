<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.bpplatform.howlfirebaseauth.ReadDatabaseActivity"
    android:orientation="vertical">
    <TextView
        android:layout_gravity="center_horizontal"
        android:textSize="20dp"
        android:text="Get Read RecyclerView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <LinearLayout
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <Spinner
            android:entries="@array/city"
            android:id="@+id/read_database_activity_spinner_city"
            android:layout_width="120dp"
            android:layout_height="wrap_content"></Spinner>
        <Spinner
            android:entries="@array/age"
            android:id="@+id/read_database_activity_spinner_age"
            android:layout_width="100dp"
            android:layout_height="wrap_content"></Spinner>
        <TextView
            android:text="대 이상"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>
    <EditText
        android:layout_gravity="center"
        android:id="@+id/read_database_activity_edittext"
        android:layout_width="200dp"
        android:layout_height="wrap_content" />
    <android.support.v7.widget.RecyclerView
        android:id="@+id/recyclerview_read_database"
        android:layout_width="match_parent"
        android:layout_height="200dp"></android.support.v7.widget.RecyclerView>
    <TextView
        android:layout_marginTop="10dp"
        android:layout_gravity="center_horizontal"
        android:textSize="20dp"
        android:text="RealTime Read RecyclerView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <android.support.v7.widget.RecyclerView
        android:id="@+id/recyclerview_read_database_realtime"
        android:layout_width="match_parent"
        android:layout_height="200dp"></android.support.v7.widget.RecyclerView>

</LinearLayout>
