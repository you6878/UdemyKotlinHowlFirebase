<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.bpplatform.howlfirebaseauth.ReadOrderbyDatabaseActivity"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <Spinner
            android:entries="@array/orderby"
            android:id="@+id/read_orderby_database_spinner_direction"
            android:layout_width="100dp"
            android:layout_height="wrap_content"></Spinner>
        <Spinner
            android:entries="@array/age"
            android:id="@+id/read_orderby_database_spinner_age_start"
            android:layout_width="100dp"
            android:layout_height="wrap_content"></Spinner>
        <Spinner
            android:entries="@array/age"
            android:id="@+id/read_orderby_database_spinner_age_end"
            android:layout_width="100dp"
            android:layout_height="wrap_content"></Spinner>
        <Spinner
            android:entries="@array/limit"
            android:id="@+id/read_orderby_database_spinner_limit"
            android:layout_width="100dp"
            android:layout_height="wrap_content"></Spinner>
    </LinearLayout>
    <android.support.v7.widget.RecyclerView
        android:id="@+id/read_orderby_database_recyclerview"
        android:layout_width="match_parent"
        android:layout_height="400dp"></android.support.v7.widget.RecyclerView>
</LinearLayout>
